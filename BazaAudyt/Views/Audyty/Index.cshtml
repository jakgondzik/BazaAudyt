@model BazaAudyt.Models.AudytViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Audyty</h1>

<p>
    <a asp-action="Create">Podejrzyj zaplanowane audyty</a>
</p>

<table class="table">
    <thead>
        <tr>

                <th>@Html.DisplayNameFor(model => model.Audyty[0].Audytor)</th>
                <th>@Html.DisplayNameFor(model => model.Audyty[0].Towarzyszacy)</th>
                <th>@Html.DisplayNameFor(model => model.Audyty[0].Data)</th>
                <th>@Html.DisplayNameFor(model => model.Audyty[0].Stanowisko)</th>
                <th>@Html.DisplayNameFor(model => model.Audyty[0].DataPlanowana)</th>
                <th>@Html.DisplayNameFor(model => model.Audyty[0].ObszarAudytu)</th>
                <th>@Html.DisplayNameFor(model => model.Audyty[0].DataZamkniecia)</th>
                <th>@Html.DisplayNameFor(model => model.Audyty[0].Pozycja)</th>
                <th>@Html.DisplayNameFor(model => model.Audyty[0].Lider)</th>
                <th>@Html.DisplayNameFor(model => model.Audyty[0].Wydzial)</th>
                <th>@Html.DisplayNameFor(model => model.Audyty[0].Brygada)</th>
                <th>@Html.DisplayNameFor(model => model.Audyty[0].Audytowany)</th>
                <th>@Html.DisplayNameFor(model => model.Audyty[0].Komentarz)</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Audyty)
        {
            <tr>
                <td>
                    <select name="Audytor">
                        @foreach (var czlonek in Model.CzlonkowieZespolu)
                        {
                            <option value="@czlonek.Id" selected="@(czlonek.Inicjaly == item.Audytor ? "selected" : null)">
                                @czlonek.Inicjaly
                            </option>

                        }
                    </select>
                    @Html.DisplayFor(modelItem => item.Audytor)
                </td>
                <td>@Html.DisplayFor(modelItem => item.Towarzyszacy)</td>
                <td>@Html.DisplayFor(modelItem => item.Data)</td>
                <td>@Html.DisplayFor(modelItem => item.Stanowisko)</td>
                <td>@Html.DisplayFor(modelItem => item.DataPlanowana)</td>
                <td>@Html.DisplayFor(modelItem => item.ObszarAudytu)</td>
                <td>@Html.DisplayFor(modelItem => item.DataZamkniecia)</td>
                <td>@Html.DisplayFor(modelItem => item.Pozycja)</td>
                <td>@Html.DisplayFor(modelItem => item.Lider)</td>
                <td>@Html.DisplayFor(modelItem => item.Wydzial)</td>
                <td>@Html.DisplayFor(modelItem => item.Brygada)</td>
                <td>@Html.DisplayFor(modelItem => item.Audytowany)</td>
                <td>@Html.DisplayFor(modelItem => item.Komentarz)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

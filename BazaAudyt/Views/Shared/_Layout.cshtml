<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BazaAudyt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BazaAudyt.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @{
            var path = Context.Request.Path.Value.ToLower();
            var hideNavbar = path == "/" || path.Contains("/home/index") || path.Contains("/home/fail");
        }

        @if (!hideNavbar)
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BazaAudyt</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="CzłonekZespołu" asp-action="Index">Użytkownicy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Audyty" asp-action="Index">Audyty</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Pytanie" asp-action="Index">Pytania</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Wynik" asp-action="Index">Wyniki</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="PodsumowanieWynikow" asp-action="Index">Podsumowanie</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="StanowiskaPracy" asp-action="Index">Stanowiska</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="AudytyWidoks" asp-action="Index">Widok Audytów(Test)</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav> }
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BazaAudyt - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
